include header1
include aside
.content-wrapper
    section.content
        .container-fluid
            include sub-header
            //search input
            .col-md-12
                .card.card-success.card-outline
                    .card-header
                        h3.card-title Add Note
                    .card-body.p-2.mt-2
                         .card-tools
                            #tab1
                                .row.form-group
                                    .col-md-6
                                        .form-group.input-group-md
                                            label Party Name
                                            input#party_name.form-control(type = "text", placeholder="Enter Party..." autofocus autocomplete="off")
                                            input#party_id(type="hidden")
                                        #party_name_error(style="color:red")
                                    .col-md-3
                                        .form-group.input-group-md
                                            label Contact
                                            input#contact.form-control(type = "text")
                                        #date_from_error(style="color:red")
                                    .col-md-3
                                        .form-group.input-group-md
                                            label Date To
                                            input#date_current.form-control(type = "date")
                                        #date_to_error(style="color:red")
                                .row.form-group
                                    .col-md-12 
                                        .form-group.input-group-md
                                            label Details
                                            textarea#details.form-control(type = "text")
                                        #date_from_error(style="color:red")
include footer
script(src="/js/notes.js")